  <root>
    <level value="ALL"/>
  </root>
  <!--
    Log Levels:
    OFF     - Log Nothing
    FATAL   - Fatal
    ERROR   - Error and Fatal
    WARN    - Warn, Error, Fatal
    INFO    - ...
    DEBUG   -
    ALL     - Log Everything
    -->
  <logger name="Application">
    <!--Set level for this logger-->
    <level value="ALL"/>
    <appender-ref ref="RemoteSyslogSSLAppender"/>
    <appender-ref ref="RollingLogFileAppender"/>
  </logger>

